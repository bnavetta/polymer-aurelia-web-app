---
parser: babel-eslint

env:
  browser: true
  es6: true
  amd: true

rules:
  comma-dangle: 0
  no-console: 0
  consistent-return: 2
  curly: [2, "multi-line"]
  quotes: [2, "single"]
  default-case: 1
  dot-location: [2, "property"]
  eqeqeq: 2
  strict: 0
  global-strict: 0
  camelcase: 2
  comma-style: [2, "last"]
  indent: [2, 4, {"indentSwitchCase": true}]
  no-var: 2
  # Angular2 decorators use caps
  new-cap: 0